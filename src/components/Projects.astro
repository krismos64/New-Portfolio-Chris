---
import { projects } from '../data/projects';

const featured = projects[0]; // SmartPlanning
const others = projects.slice(1);
---

<section id="projects">
  <h2 class="section-title">Projets</h2>

  <!-- Projet phare : SmartPlanning -->
  <a href={featured.links.website} target="_blank" rel="noopener" class="featured fade-up">
    <div class="featured-image">
      <img src={featured.image} alt={featured.title} loading="lazy" />
      <div class="featured-overlay">
        <span class="featured-cta">
          Voir le projet
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"/><polyline points="7 7 17 7 17 17"/></svg>
        </span>
      </div>
    </div>
    <div class="featured-body">
      <div class="featured-top">
        <span class="badge badge-blue">{featured.badge}</span>
        <div class="featured-links-inline">
          {featured.links.github && (
            <span class="link-icon" title="Code source">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>
            </span>
          )}
          {featured.links.video && (
            <span class="link-icon" title="Vidéo démo">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="5 3 19 12 5 21 5 3"/></svg>
            </span>
          )}
        </div>
      </div>
      <h3 class="featured-title">{featured.title}</h3>
      <p class="featured-tagline">{featured.tagline}</p>
      <div class="featured-tech">
        {featured.tech.map((t) => (
          <span class="tech-pill">{t}</span>
        ))}
      </div>
      <div class="featured-highlights">
        {featured.highlights.map((h) => (
          <div class="highlight-item">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            <span>{h}</span>
          </div>
        ))}
      </div>
    </div>
  </a>

  <!-- Autres projets -->
  <div class="projects-grid">
    {others.map((project) => (
      <article class="card fade-up">
        <div class="card-image">
          <img src={project.image} alt={project.title} loading="lazy" />
          <span class={`badge badge-${project.badgeColor}`}>{project.badge}</span>
        </div>
        <div class="card-body">
          <h3 class="card-title">{project.title}</h3>
          <p class="card-tagline">{project.tagline}</p>
          <div class="card-tech">
            {project.tech.slice(0, 4).map((t) => (
              <span class="tech-pill">{t}</span>
            ))}
            {project.tech.length > 4 && (
              <span class="tech-pill tech-more">+{project.tech.length - 4}</span>
            )}
          </div>
          <div class="card-links">
            {project.links.website && (
              <a href={project.links.website} target="_blank" rel="noopener" class="card-link card-link-primary">
                Voir le site
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"/><polyline points="7 7 17 7 17 17"/></svg>
              </a>
            )}
            {project.links.github && (
              <a href={project.links.github} target="_blank" rel="noopener" class="card-link">
                <svg width="15" height="15" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>
                Code
              </a>
            )}
            {project.links.video && (
              <a href={project.links.video} target="_blank" rel="noopener" class="card-link">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                D&eacute;mo
              </a>
            )}
          </div>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  #projects {
    padding: 5rem 1.5rem;
    max-width: var(--max-width);
    margin: 0 auto;
  }

  /* ===== FEATURED PROJECT ===== */
  .featured {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    margin-bottom: 2rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  .featured:hover {
    border-color: var(--accent);
    box-shadow: 0 0 0 1px var(--accent), 0 8px 40px rgba(59, 130, 246, 0.1);
    color: inherit;
  }

  .featured-image {
    position: relative;
    overflow: hidden;
    min-height: 340px;
  }
  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  .featured:hover .featured-image img {
    transform: scale(1.04);
  }
  .featured-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 50%);
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .featured:hover .featured-overlay {
    opacity: 1;
  }
  .featured-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: var(--accent);
    color: white;
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-weight: 600;
  }

  .featured-body {
    padding: 2rem 2.25rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.75rem;
  }

  .featured-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .featured-links-inline {
    display: flex;
    gap: 0.5rem;
  }
  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    border: 1px solid var(--border);
    transition: all var(--transition);
  }
  .link-icon:hover {
    color: var(--text);
    border-color: var(--border-light);
  }

  .featured-title {
    font-size: 1.75rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    color: var(--text);
  }

  .featured-tagline {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .featured-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .featured-highlights {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem 1rem;
    margin-top: 0.5rem;
  }
  .highlight-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }
  .highlight-item svg {
    color: var(--green);
    flex-shrink: 0;
  }

  /* ===== OTHER PROJECTS GRID ===== */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  .card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: border-color var(--transition), box-shadow var(--transition), transform var(--transition);
  }
  .card:hover {
    border-color: var(--border-light);
    box-shadow: var(--shadow);
    transform: translateY(-3px);
  }

  .card-image {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--bg-alt);
  }
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  .card:hover .card-image img {
    transform: scale(1.04);
  }

  /* ===== BADGES ===== */
  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    white-space: nowrap;
  }
  .card-image .badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
  }
  .badge-blue {
    color: var(--accent);
    background: var(--accent-subtle);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  .badge-green {
    color: var(--green);
    background: var(--green-subtle);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }
  .badge-purple {
    color: var(--purple);
    background: var(--purple-subtle);
    border: 1px solid rgba(168, 85, 247, 0.2);
  }
  .badge-amber {
    color: var(--amber);
    background: var(--amber-subtle);
    border: 1px solid rgba(245, 158, 11, 0.2);
  }

  /* ===== CARD BODY ===== */
  .card-body {
    padding: 1.25rem 1.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 0.125rem;
  }

  .card-tagline {
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-bottom: 0.875rem;
  }

  .card-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: auto;
    padding-bottom: 1rem;
  }

  .tech-pill {
    padding: 0.2rem 0.625rem;
    font-size: 0.6875rem;
    font-weight: 500;
    border-radius: 100px;
    color: var(--text-secondary);
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--border);
  }
  .tech-more {
    color: var(--text-muted);
  }

  .card-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    transition: all var(--transition);
    text-decoration: none;
  }
  .card-link:hover {
    color: var(--text);
    border-color: var(--border-light);
    background: rgba(255, 255, 255, 0.03);
  }
  .card-link-primary {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }
  .card-link-primary:hover {
    background: var(--accent-hover);
    border-color: var(--accent-hover);
    color: white;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 900px) {
    .featured {
      grid-template-columns: 1fr;
    }
    .featured-image {
      min-height: 220px;
    }
    .featured-body {
      padding: 1.5rem;
    }
    .featured-highlights {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    .featured-title {
      font-size: 1.375rem;
    }
  }
</style>
