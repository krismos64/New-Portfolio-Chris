        <h2 style="color: #00ffff;">Section Contact</h2>
        <p style="color: white; font-size: 1.2rem;">
            <i class="fas fa-envelope" style="margin-right: 0.5rem; color: #00ffff;"></i>
            christophe.mostefaoui.dev@gmail.com
        </p>
        <p style="color: white; font-size: 1.2rem;">
            <i class="fas fa-phone" style="margin-right: 0.5rem; color: #00ffff;"></i>
            +33 6 79 08 88 45
        </p>
    </div>

    <script>
        console.log("Page ultra-simple chargée");
        console.log("Tests des éléments :");
        
        const h1 = document.querySelector('h1');
        console.log("H1 trouvé:", h1 ? h1.textContent : "NON");
        
        const paragraphs = document.querySelectorAll('p');
        console.log("Paragraphes trouvés:", paragraphs.length);
        
        paragraphs.forEach((p, i) => {
            console.log(`P${i + 1}:`, p.textContent ? "OUI" : "NON");
        });

        // Test de visibilité CSS
        const firstP = document.querySelector('p');
        if (firstP) {
            const styles = getComputedStyle(firstP);
            console.log("Styles du premier paragraphe:");
            console.log("- display:", styles.display);
            console.log("- visibility:", styles.visibility);
            console.log("- opacity:", styles.opacity);
            console.log("- color:", styles.color);
        }
    </script>
