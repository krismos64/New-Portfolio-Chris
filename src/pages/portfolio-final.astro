<script>
document.addEventListener('DOMContentLoaded', () => {
    console.log("Portfolio final charg√©");
    
    // Navigation
    const menuToggle = document.querySelector(".menu-toggle");
    const navMenu = document.querySelector(".nav-menu");
    
    if (menuToggle && navMenu) {
        menuToggle.addEventListener("click", () => {
            navMenu.classList.toggle("active");
            menuToggle.innerHTML = navMenu.classList.contains("active")
                ? '<i class="fas fa-times"></i>'
                : '<i class="fas fa-bars"></i>';
        });
    }
    
    // Smooth scroll
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            const target = document.querySelector(targetId);
            
            if (target) {
                if (navMenu?.classList.contains("active")) {
                    navMenu.classList.remove("active");
                    if (menuToggle) menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
                }
                
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    
    // Dropdowns
    document.querySelectorAll('.dropdown-toggle').forEach(button => {
        button.addEventListener('click', function() {
            const dropdown = this.nextElementSibling;
            if (dropdown) {
                this.classList.toggle('active');
                dropdown.classList.toggle('active');
                
                const icon = this.querySelector('i');
                if (icon) {
                    icon.style.transform = dropdown.classList.contains('active')
                        ? 'rotate(180deg)'
                        : 'rotate(0deg)';
                }
            }
        });
    });
    
    // Dipl√¥me fullscreen
    const showDiplomaBtn = document.getElementById("showDiploma");
    if (showDiplomaBtn) {
        showDiplomaBtn.onclick = function(e) {
            e.preventDefault();
            
            let fullscreenContainer = document.getElementById("diplomaFullscreen");
            
            if (!fullscreenContainer) {
                fullscreenContainer = document.createElement("div");
                fullscreenContainer.id = "diplomaFullscreen";
                fullscreenContainer.className = "fullscreen-image";
                fullscreenContainer.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.9);
                    z-index: 2000;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    opacity: 0;
                    visibility: hidden;
                    transition: opacity 0.3s ease, visibility 0.3s ease;
                `;

                const img = document.createElement("img");
                img.src = "/docs/diplome.png";
                img.alt = "Dipl√¥me de Christophe Mostefaoui";
                img.style.cssText = `
                    max-width: 90%;
                    max-height: 90%;
                    object-fit: contain;
                    border: 2px solid #00ffff;
                    transform: scale(0.9);
                    transition: transform 0.3s ease;
                `;

                const closeBtn = document.createElement("span");
                closeBtn.innerHTML = "&times;";
                closeBtn.style.cssText = `
                    position: absolute;
                    top: 20px;
                    right: 30px;
                    color: #00ffff;
                    font-size: 40px;
                    font-weight: bold;
                    cursor: pointer;
                    z-index: 2001;
                    width: 50px;
                    height: 50px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    border-radius: 50%;
                    background: rgba(10, 10, 46, 0.7);
                    border: 2px solid #7f00ff;
                `;

                fullscreenContainer.appendChild(img);
                fullscreenContainer.appendChild(closeBtn);
                document.body.appendChild(fullscreenContainer);

                const closeModal = () => {
                    fullscreenContainer.style.opacity = '0';
                    fullscreenContainer.style.visibility = 'hidden';
                    setTimeout(() => {
                        if (fullscreenContainer.parentNode) {
                            fullscreenContainer.parentNode.removeChild(fullscreenContainer);
                        }
                    }, 300);
                };

                closeBtn.addEventListener("click", closeModal);
                fullscreenContainer.addEventListener("click", function(e) {
                    if (e.target === fullscreenContainer) closeModal();
                });

                document.addEventListener("keydown", function(e) {
                    if (e.key === "Escape") closeModal();
                });
            }

            setTimeout(() => {
                fullscreenContainer.style.opacity = '1';
                fullscreenContainer.style.visibility = 'visible';
                const img = fullscreenContainer.querySelector('img');
                if (img) img.style.transform = 'scale(1)';
            }, 10);
        };
    }
    
    // √âtoiles
    const container = document.getElementById("stars");
    if (container) {
        container.innerHTML = "";
        
        function createStarBatch(count, className) {
            const fragment = document.createDocumentFragment();
            for (let i = 0; i < count; i++) {
                const star = document.createElement("div");
                star.className = className;
                star.style.cssText = `
                    position: fixed;
                    background: rgba(255, 255, 255, 0.8);
                    width: 2px;
                    height: 2px;
                    border-radius: 50%;
                    pointer-events: none;
                    z-index: 0;
                    left: ${Math.random() * 100}%;
                    top: ${Math.random() * 100}%;
                    animation: starFlow ${Math.random() * 30 + 30}s linear infinite;
                    animation-delay: ${Math.random() * 15}s;
                `;
                if (className.includes('bright')) {
                    star.style.background = 'rgba(0, 255, 255, 0.9)';
                    star.style.boxShadow = '0 0 3px 1px rgba(0, 255, 255, 0.6)';
                } else if (className.includes('purple')) {
                    star.style.background = 'rgba(127, 0, 255, 0.9)';
                    star.style.boxShadow = '0 0 3px 1px rgba(127, 0, 255, 0.6)';
                }
                fragment.appendChild(star);
            }
            return fragment;
        }

        container.appendChild(createStarBatch(50, "star"));
        container.appendChild(createStarBatch(30, "star bright"));
        container.appendChild(createStarBatch(20, "star purple"));
    }
    
    // Animations CSS pour les √©toiles
    const starFlowKeyframes = `
        @keyframes starFlow {
            0% { transform: translate(-100vw, -100vh); }
            100% { transform: translate(100vw, 100vh); }
        }
    `;
    const style = document.createElement('style');
    style.textContent = starFlowKeyframes;
    document.head.appendChild(style);
    
    // AOS
    if (window.AOS) {
        AOS.init({
            duration: 800,
            once: true,
            offset: 120,
        });
    }
});
</script>
